<!DOCTYPE html>
<html lang="tr" data-theme="light">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dr. Öğr. Üyesi {{ site.name }} | Akademik Profil</title>

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Playfair+Display:ital,wght@0,600;1,600&display=swap"
        rel="stylesheet">

    <!-- FontAwesome for Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <!-- Custom CSS -->
    <link rel="stylesheet" href="/style.css">
</head>

<body>

    <!-- Header & Navigation -->
    <header class="header" id="header">
        <div class="container nav-container">
            <a href="#home" class="logo">SD.</a>
            <nav class="navbar">
                <ul class="nav-list">
                    <li><a href="#home" class="nav-link active" data-tr="Hakkımda" data-en="About">Hakkımda</a></li>
                    <li><a href="#cv" class="nav-link" data-tr="Özgeçmiş" data-en="CV">Özgeçmiş</a></li>
                    <li><a href="/publications/" class="nav-link" data-tr="Yayınlarım" data-en="Publications">Yayınlarım</a></li>
                    <li><a href="/blog/" class="nav-link">Blog</a></li>
                    <li><a href="#iletisim" class="nav-link" data-tr="İletişim" data-en="Contact">İletişim</a></li>
                </ul>
            </nav>
            <div class="header-actions">
                <button class="toggle-btn" id="langToggle" title="Switch language" aria-label="Switch language">
                    <span class="lang-label">EN</span>
                </button>
                <button class="toggle-btn" id="themeToggle" title="Tema değiştir" aria-label="Toggle dark mode">
                    <i class="fas fa-moon"></i>
                </button>
                <div class="mobile-menu-btn">
                    <i class="fas fa-bars"></i>
                </div>
            </div>
        </div>
    </header>

    <main>
        <!-- Hero Section -->
        <section id="home" class="hero section">
            <div class="container hero-container">
                <div class="hero-content">
                    <div class="hero-text">
                        <span class="greeting" data-tr="{{ site.greeting }}" data-en="{{ site.greeting_en }}">{{ site.greeting }}</span>
                        <h1 class="name">{{ site.name }}</h1>
                        <h2 class="title" data-tr="{{ site.title }}" data-en="{{ site.title_en }}">{{ site.title }}</h2>
                        <p class="bio-summary" data-tr="{{ site.bio_summary }}" data-en="{{ site.bio_summary_en }}">{{ site.bio_summary }}</p>

                        <div class="social-links">
                            {% for link in site.social_links %}
                            {% if link.platform == "twitter" %}
                            <a href="{{ link.url }}" class="social-icon" target="_blank"
                                rel="noopener noreferrer" title="{{ link.label }}" aria-label="{{ link.label }}">
                                <svg xmlns="http://www.w3.org/2000/svg" width="1em" height="1em"
                                    viewBox="0 0 512 512">
                                    <path fill="currentColor"
                                        d="M389.2 48h70.6L305.6 224.2 487 464H345L233.7 318.6 106.5 464H35.8L200.7 275.5 26.8 48H172.4L272.9 180.9 389.2 48zM364.4 421.8h39.1L151.1 88h-42L364.4 421.8z" />
                                </svg>
                            </a>
                            {% else %}
                            <a href="{{ link.url }}" class="social-icon" target="_blank"
                                rel="noopener noreferrer" aria-label="{{ link.label }}">
                                <i class="{{ link.icon }}"></i>
                            </a>
                            {% endif %}
                            {% endfor %}
                        </div>
                    </div>

                    <div class="hero-image-container">
                        <div class="image-wrapper">
                            <img src="/profile.jpeg" alt="Dr. {{ site.name }}" class="profile-img" id="profileImage"
                                onerror="this.src='https://ui-avatars.com/api/?name=Sadettin+Demirel&size=400&background=1e293b&color=ffffff'">
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- About Full Bio Section -->
        <section id="about" class="about section bg-light">
            <div class="container">
                <div class="section-header">
                    <h2 class="section-title" data-tr="Hakkımda" data-en="About Me">Hakkımda</h2>
                    <div class="divider"></div>
                </div>
                <div class="about-content">
                    {% for i in range(0, site.about_paragraphs | length) %}
                    <p data-tr="{{ site.about_paragraphs[i] }}" data-en="{{ site.about_paragraphs_en[i] }}">{{ site.about_paragraphs[i] }}</p>
                    {% endfor %}
                </div>
            </div>
        </section>

        <!-- CV Section -->
        <section id="cv" class="cv section">
            <div class="container">
                <div class="section-header">
                    <h2 class="section-title" data-tr="Özgeçmiş" data-en="Curriculum Vitae">Özgeçmiş</h2>
                    <div class="divider"></div>
                </div>
                <div class="cv-content">
                    <!-- Education Card -->
                    <div class="cv-card">
                        <div class="cv-icon">
                            <i class="fas fa-graduation-cap"></i>
                        </div>
                        <div class="cv-details">
                            <h3 data-tr="Eğitim" data-en="Education">Eğitim</h3>
                            <ul class="timeline">
                                {% for edu in site.education %}
                                <li>
                                    <span class="date">{{ edu.year }}</span>
                                    <h4 data-tr="{{ edu.degree }}" data-en="{{ edu.degree_en }}">{{ edu.degree }}</h4>
                                    <p data-tr="{{ edu.institution }}" data-en="{{ edu.institution_en }}">{{ edu.institution }}</p>
                                </li>
                                {% endfor %}
                            </ul>
                        </div>
                    </div>

                    <!-- Career Card -->
                    <div class="cv-card">
                        <div class="cv-icon">
                            <i class="fas fa-briefcase"></i>
                        </div>
                        <div class="cv-details">
                            <h3 data-tr="Kariyer" data-en="Career">Kariyer</h3>
                            <ul class="timeline">
                                {% for job in site.career %}
                                <li>
                                    <span class="date" {% if job.year_en %}data-tr="{{ job.year }}" data-en="{{ job.year_en }}"{% endif %}>{{ job.year }}</span>
                                    <h4 data-tr="{{ job.position }}" data-en="{{ job.position_en }}">{{ job.position }}</h4>
                                    <p data-tr="{{ job.institution }}" data-en="{{ job.institution_en }}">{{ job.institution }}</p>
                                </li>
                                {% endfor %}
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </section>


        <!-- Contact Section -->
        <section id="iletisim" class="contact section bg-light">
            <div class="container">
                <div class="section-header">
                    <h2 class="section-title" data-tr="İletişim" data-en="Contact">İletişim</h2>
                    <div class="divider"></div>
                </div>
                <div class="contact-content">
                    <p style="text-align: center; margin-bottom: 2rem;"
                       data-tr="Benimle iletişime geçmek için aşağıdaki formu doldurabilir veya <a href='mailto:{{ site.email }}' class='inline-link'>e-posta adresim</a> üzerinden bana ulaşabilirsiniz."
                       data-en="You can fill out the form below to get in touch or reach me via <a href='mailto:{{ site.email }}' class='inline-link'>my email address</a>.">
                        Benimle iletişime geçmek için aşağıdaki formu doldurabilir veya <a
                            href="mailto:{{ site.email }}" class="inline-link">e-posta adresim</a>
                        üzerinden bana ulaşabilirsiniz.
                    </p>
                    <form action="https://formsubmit.co/{{ site.email }}" method="POST" class="contact-form" id="contactForm">
                        <input type="hidden" name="_subject" value="Yeni İletişim Formu Mesajı!">
                        <!-- Honeypot -->
                        <input type="text" name="_honey" style="display:none" tabindex="-1" autocomplete="off">
                        <div class="form-group">
                            <label for="name" data-tr="Adınız Soyadınız" data-en="Full Name">Adınız Soyadınız</label>
                            <input type="text" id="name" name="name" class="form-control" required
                                data-tr-placeholder="Adınız Soyadınız" data-en-placeholder="Your full name"
                                placeholder="Adınız Soyadınız">
                        </div>
                        <div class="form-group">
                            <label for="email" data-tr="E-posta Adresiniz" data-en="Email Address">E-posta Adresiniz</label>
                            <input type="email" id="email" name="email" class="form-control" required
                                data-tr-placeholder="E-posta adresiniz" data-en-placeholder="Your email address"
                                placeholder="E-posta adresiniz">
                        </div>
                        <div class="form-group">
                            <label for="message" data-tr="Mesajınız" data-en="Your Message">Mesajınız</label>
                            <textarea id="message" name="message" class="form-control" required
                                data-tr-placeholder="Mesajınızı buraya yazın..." data-en-placeholder="Write your message here..."
                                placeholder="Mesajınızı buraya yazın..."></textarea>
                        </div>
                        <!-- Matematik CAPTCHA -->
                        <div class="form-group">
                            <label for="captcha"><i class="fas fa-shield-alt"></i> <span data-tr="Güvenlik Sorusu:" data-en="Security Question:">Güvenlik Sorusu:</span> <strong id="captchaQuestion"></strong></label>
                            <input type="number" id="captcha" class="form-control" required
                                data-tr-placeholder="Cevabınızı yazın" data-en-placeholder="Enter your answer"
                                placeholder="Cevabınızı yazın">
                        </div>
                        <button type="submit" class="btn btn-primary" style="width: 100%; justify-content: center;">
                            <i class="fas fa-paper-plane"></i> <span data-tr="Mesaj Gönder" data-en="Send Message">Mesaj Gönder</span>
                        </button>
                    </form>
                </div>
            </div>
        </section>
    </main>

    <!-- Footer -->
    <footer class="footer">
        <div class="container footer-container">
            <div class="footer-info">
                <p><span data-tr="Tüm hakları saklıdır." data-en="All rights reserved.">&copy; <span id="currentYear"></span> Dr. {{ site.name }}. Tüm hakları saklıdır.</span></p>
            </div>
            <div class="footer-social">
                {% for link in site.social_links %}
                {% if link.platform == "twitter" %}
                <a href="{{ link.url }}" target="_blank" title="{{ link.label }}">
                    <svg xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" viewBox="0 0 512 512"
                        style="position: relative; top: 2px;">
                        <path fill="currentColor"
                            d="M389.2 48h70.6L305.6 224.2 487 464H345L233.7 318.6 106.5 464H35.8L200.7 275.5 26.8 48H172.4L272.9 180.9 389.2 48zM364.4 421.8h39.1L151.1 88h-42L364.4 421.8z" />
                    </svg>
                </a>
                {% elif link.platform != "email" %}
                <a href="{{ link.url }}" target="_blank"><i class="{{ link.icon }}"></i></a>
                {% endif %}
                {% endfor %}
            </div>
        </div>
    </footer>

    <!-- Custom Script -->
    <script src="/script.js"></script>

</body>

</html>
